#!/usr/bin/env php
<?php

require __DIR__.'/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use Methylbro\Compiler\Compiler;
use Methylbro\Compiler\Command\CompileCommand;

$application = new Application('@name@', '@distrib@-@version@');

$compiler = new Compiler();
$compile = new CompileCommand($compiler);
$application->add($compile);

$application->run();
