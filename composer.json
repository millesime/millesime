{
    "name": "millesime/millesime",
    "description": "Create Phar archive(s) from your PHP project.",
    "authors": [
        {
            "name": "Thomas GASC",
            "email": "thomas@gasc.fr"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-phar": "*",
        "schnittstabil/finder-by-config": "^1.1",
        "symfony/process": "^5.0",
        "symfony/console": "^5.0",
        "psr/log": "^1.1",
        "symfony/event-dispatcher": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/config": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "suggest": {
        "ext-hash": "Needed to sign phar archives with SHA256 & SHA512",
        "ext-openssl": "Needed to sign phar archives with OpenSSL",
        "millesime/appellation": "Helps you to push your phar packages into your releases assets"
    },
    "autoload": {
        "psr-4": {
            "Millesime\\": "src/",
            "Millesime\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/millesime"
    ]
}
